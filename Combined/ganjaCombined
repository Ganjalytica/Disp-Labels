      text-align: center;
    }

    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .container > div {
      flex: 1 0 calc(50% - 10px);
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-top: 15px;
    }

    select {
      width: 100%;
    }

    button {
      display: block;
      margin-top: 20px;
      padding: 10px;
      width: 100%;
      background-color: #b8c2b6;
      color: white;
      border: none;
      border-radius: 5px;
      transition: transform 0.1s;
    }

    button:active {
      transform: scale(0.98);
    }

    .result {
      margin-top: 20px;
      font-size: 24px;
      font-weight: bold;
      text-align: center;
      border: 4px solid #879784;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
      transition: 0.3s;
      background-image: url(https://ganjalytica.com/wp-content/uploads/2023/05/1.png);
      background-position: center;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-color: rgba(255,255,255,0.6);
    }

    .result p {
      font-size: 16px;
      font-weight: normal;
    }

    .result .data {
      font-size: 16px;
      font-weight: bold;
    }

    .result .small-print {
      font-size: 12px;
      font-weight: bold;
    }

    .result .highlight {
      font-size: 16px;
      font-weight: bold;
    }

    .result:hover {
      box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    @media (max-width: 576px) {
      .container > div {
        flex: 1 0 100%;
      }
    }

    #dispensary-name-label {
      display: none;
    }

